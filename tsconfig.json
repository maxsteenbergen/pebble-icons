{
    "compilerOptions": {
      "module": "esnext",
      "declaration": true,
      "declarationDir": "./types",
      "outDir": "./dist",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "target": "es6",
      "lib": ["es2017", "dom"],
      "noImplicitAny": true,
    },
    "exclude": [
        "node_modules",
        "dist",
        "types",
    ],
    "filesGlob": ["./react/*.tsx"]
  }